@model StoreMVC.Models.StoreViewModel
@{
    ViewData["Title"] = "SelectDeleteProduct";
}

<h1>Select Product To Delete</h1>

<table>
    <thead>
        <tr>
            @*<th>Product ID</th>*@
            <th>Product Name</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model.ListOfProducts)
        {
        <tr>
            @*<td>@product.ProductID</td>*@
            <td><a asp-controller="Store" asp-action="DeleteResult" asp-route-id="@product.ProductID">@product.ProductName</a></td>
        </tr>
        }
    </tbody>
</table>

